<%-layout("layouts/boilerplate.ejs") %>
<body>
    <h3 style="color: red;">Edit your Details</h3>
    <div class="row">
    <div class="col-8 offset-2">
    <form method="post" action="/listings/<%= listing._id%>?_method=put" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Enter Title</label>
            <input value="<%=listing.title%>" type="text" name="listing[title]" class="form-control" required>
            <div class="invalid-feedback">invalid title </div>
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <input value="<%=listing.description%>" type="text" name="listing[description]" class="form-control" required>
            <div class="invalid-feedback">invalid description</div>
          </div>
          <div class="mb-3">
            Original Listing Image <br> 
          <img src="<%= OriginalImageUrl %>"><br>
        </div>

          <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input  type="file" name="listing[image]" class="form-control" >      
            <div class="invalid-feedback">invalid image-url</div>    
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input value="<%=listing.price%>" name="listing[price]" class="form-control" required> 
            <div class="invalid-feedback">invalid price</div>         
        </div>
          <div class="mb-3 col-md-8">
            <label for="location" class="form-label">Location</label>
            <input value="<%=listing.location%>" type="text" name="listing[location]" class="form-control" required> 
            <div class="invalid-feedback">invalid location</div>         
          </div>
        </div> 
          <div class="mb-3">
            <label for="country2" class="form-label">Country</label>
            <input value="<%=listing.country%>" type="text" name="listing[country]" class="form-control" required>    
            <div class="invalid-feedback">invalid country</div>      
        </div>
        <button class="btn edit-btn">Edit</button>
    </form>
  </div>
  </div>
</body>
